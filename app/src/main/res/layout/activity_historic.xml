            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"/>
    </RelativeLayout>

    <RelativeLayout
